<!DOCTYPE html>
%html{ :lang => 'en' }

%head
  %meta{:charset => "utf-8"}
  %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}

  -# Pull in the page title
  %title= @title||data.page.title

  %meta{:name => "description", :content => ""}
  %meta{:name => "author", :content => ""}
  %meta{:name =>"viewport", :content => "width=device-width, initial-scale=1.0"}

  -# Place favicon.ico and apple-touch-icon.png in the root directory

  = stylesheet_link_tag "screen"

%body
  .container
    = navbar inverse: true, fixed: :top do
      = navbar_header brand:"Music Archive", brand_link: '/'
      = navbar_collapse do
        = navbar_group do
          = navbar_item "Home", '/'
          = navbar_item "Recent", '/recent.html'
          = navbar_item "Top Downloads", '/top_downloads.html'
          = navbar_item "Top Artists", '/top_artists.html'

    %h1= @title||data.page.title
    ~ yield

    %footer
      %p &copy; #{copyright_years(2015)} WH Experience

  = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"
  :javascript
    window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.8.3.min.js"><\/script>')

  = javascript_include_tag "plugins", "script"
  = javascript_include_tag "bootstrap.js"
  <link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/tomorrow-night.min.css">
  <script src="http://yandex.st/highlightjs/8.0/highlight.min.js"></script>
  %script hljs.initHighlightingOnLoad();
